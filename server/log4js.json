{
  "appenders": [
    {
      "type": "clustered",
      "appenders": [
        {
          "type": "stdout",
          "layout": {
            "type": "pattern",
            "pattern": "%[%p [%d]%] %m"
          }
        },
        {
          "type": "logLevelFilter",
          "level": "ERROR",
          "appender": {
            "type": "file",
            "filename": "log/errors.log"
          }
        }
      ]
    }
  ]
}
