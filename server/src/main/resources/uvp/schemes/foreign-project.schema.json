{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$ref": "#/definitions/ForeignProject",
  "definitions": {
    "ForeignProject": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "_uuid": {
          "type": "string",
          "format": "uuid"
        },
        "_type": {
          "const": "UvpForeignProjectDoc"
        },
        "title": {
          "type": "string"
        },
        "description": {
          "type": "string"
        },
        "publisher": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/Publisher"
          },
          "minItems": 1,
          "maxItems": 1
        },
        "spatial": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/Spatial"
          },
          "minItems": 1
        },
        "processingSteps": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/ProcessingStepForeign"
          }
        }
      },
      "required": [
        "_uuid",
        "_type",
        "title",
        "description",
        "publisher",
        "spatial"
      ],
      "title": "ForeignProject"
    },
    "KeyValue": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "key": {
          "type": [
            "string",
            "null"
          ]
        },
        "value": {
          "type": [
            "string",
            "null"
          ]
        }
      },
      "title": "KeyValue"
    },
    "ProcessingStepForeign": {
      "type": "object",
      "properties": {
        "type": {
          "enum": [
            "publicDisclosure",
            "decisionOfAdmission"
          ]
        }
      },
      "allOf": [
        {
          "if": {
            "properties": {
              "type": {
                "const": "publicDisclosure"
              }
            }
          },
          "then": {
            "additionalProperties": false,
            "properties": {
              "type": {
                "const": "publicDisclosure"
              },
              "disclosureDate": {
                "$ref": "#/definitions/Date"
              },
              "announcementDocs": {
                "type": ["null","array"],
                "items": {
                  "$ref": "#/definitions/Doc"
                }
              },
              "applicationDocs": {
                "type": ["null","array"],
                "items": {
                  "$ref": "#/definitions/Doc"
                }
              },
              "reportsRecommendationDocs": {
                "type": ["null","array"],
                "items": {
                  "$ref": "#/definitions/Doc"
                }
              },
              "furtherDocs": {
                "type": ["null","array"],
                "items": {
                  "$ref": "#/definitions/Doc"
                }
              }
            }
          }
        },
        {
          "if": {
            "properties": {
              "type": {
                "const": "decisionOfAdmission"
              }
            }
          },
          "then": {
            "additionalProperties": false,
            "properties": {
              "type": {
                "const": "decisionOfAdmission"
              },
              "decisionDate": {
                "type": "string",
                "format": "date-time"
              },
              "approvalDocs": {
                "type": "array",
                "items": {
                  "$ref": "#/definitions/Doc"
                }
              },
              "decisionDocs": {
                "type": "array",
                "items": {
                  "$ref": "#/definitions/Doc"
                }
              }
            }
          }
        }
      ],
      "required": [],
      "title": "ProcessingStepForeign"
    },
    "Doc": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "title": {
          "type": "string"
        },
        "downloadURL": {
          "$ref": "#/definitions/DownloadURL"
        }
      },
      "required": [],
      "title": "Doc"
    },
    "DownloadURL": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "asLink": {
          "type": "boolean"
        },
        "value": {
          "type": "string"
        },
        "uri": {
          "type": "string"
        }
      },
      "required": [],
      "title": "DownloadURL"
    },
    "Date": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "start": {
          "type": "string",
          "format": "date-time"
        },
        "end": {
          "type": "string",
          "format": "date-time"
        }
      },
      "required": [],
      "title": "Date"
    },
    "Publisher": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "ref": {
          "type": "string"
        },
        "type": {
          "$ref": "#/definitions/KeyValue"
        }
      },
      "required": [
        "ref",
        "type"
      ],
      "title": "Publisher"
    },
    "Spatial": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "type": {
          "type": "string"
        },
        "title": {
          "type": "string"
        },
        "value": {
          "$ref": "#/definitions/BoundingBox"
        }
      },
      "required": [],
      "title": "Spatial"
    },
    "BoundingBox": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "lat1": {
          "type": "number"
        },
        "lat2": {
          "type": "number"
        },
        "lon1": {
          "type": "number"
        },
        "lon2": {
          "type": "number"
        }
      },
      "required": [
        "lat1",
        "lat2",
        "lon1",
        "lon2"
      ],
      "title": "Value"
    }
  }
}
