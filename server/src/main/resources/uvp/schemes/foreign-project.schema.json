{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "ForeignProject#1.0.0",
  "$ref": "#/definitions/ForeignProject",
  "definitions": {
    "ForeignProject": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "_uuid": {
          "type": "string",
          "format": "uuid"
        },
        "_type": {
          "const": "UvpForeignProjectDoc"
        },
        "title": {
          "type": "string"
        },
        "description": {
          "type": "string"
        },
        "pointOfContact": {
          "type": "array",
          "items": {
            "$ref": "refs/general.schema.json#/definitions/PointOfContact"
          },
          "minItems": 1,
          "maxItems": 1
        },
        "spatial": {
          "type": "array",
          "items": {
            "$ref": "refs/general.schema.json#/definitions/Spatial"
          },
          "minItems": 1
        },
        "processingSteps": {
          "type": "array",
          "items": {
            "$ref": "refs/processing-steps-foreign-projects.schema.json"
          }
        }
      },
      "required": [
        "_uuid",
        "_type",
        "title",
        "description",
        "pointOfContact",
        "spatial"
      ],
      "title": "ForeignProject"
    }
  }
}
