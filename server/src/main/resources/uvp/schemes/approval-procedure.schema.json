{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "ApprovalProcedure#1.0.0",
  "$ref": "#/definitions/ApprovalProcedure",
  "definitions": {
    "ApprovalProcedure": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "_uuid": {
          "type": "string",
          "format": "uuid"
        },
        "_type": {
          "const": "UvpApprovalProcedureDoc"
        },
        "title": {
          "type": "string"
        },
        "description": {
          "type": "string"
        },
        "pointOfContact": {
          "type": "array",
          "items": {
            "$ref": "refs/general.schema.json#/definitions/PointOfContact"
          },
          "minItems": 1,
          "maxItems": 1
        },
        "spatial": {
          "type": "array",
          "items": {
            "$ref": "../../general.schema.json#/definitions/Spatial"
          },
          "minItems": 1,
          "maxItems": 1
        },
        "receiptDate": {
          "type": "string",
          "format": "date-time"
        },
        "eiaNumbers": {
          "type": "array",
          "items": {
            "$ref": "refs/general.schema.json#/definitions/KeyValue"
          },
          "minItems": 1
        },
        "prelimAssessment": {
          "type": "boolean"
        },
        "processingSteps": {
          "type": "array",
          "items": {
            "$ref": "refs/processing-steps-default.schema.json"
          }
        }
      },
      "required": [
        "_uuid",
        "_type",
        "title",
        "description",
        "pointOfContact",
        "spatial",
        "receiptDate",
        "eiaNumbers",
        "prelimAssessment"
      ],
      "title": "ApprovalProcedure"
    }
  }
}
