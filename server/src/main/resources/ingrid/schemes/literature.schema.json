{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "Literature#1.0.0",
  "$ref": "#/definitions/Literature",
  "definitions": {
    "Literature": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "isAdVCompatible": {
          "type": "boolean"
        },
        "isOpenData": {
          "type": "boolean"
        },
        "isInspireIdentified": {
          "type": "boolean"
        },
        "_uuid": {
          "type": "string",
          "format": "uuid"
        },
        "_type": {
          "const": "InGridLiterature"
        },
        "title": {
          "type": "string"
        },
        "description": {
          "type": "string"
        },
        "alternateTitle": {
          "type": "string"
        },
        "serviceType": {
          "anyOf": [
            {
              "type": "object",
              "additionalProperties": false,
              "properties": {
                "key": {
                  "type": "string"
                }
              }
            },
            {
              "type": "null"
            }
          ]
        },
        "serviceUrls": {
          "type": "array",
          "items": {
            "type": "object",
            "additionalProperties": false,
            "properties": {
              "url": {
                "type": "string"
              },
              "name": {
                "type": "string"
              },
              "description": {
                "type": "string"
              }
            }
          }
        },
        "serviceVersion": {
          "type": "array",
          "items": {
            "$ref": "../../general.schema.json#/definitions/KeyValue"
          }
        },
        "parentIdentifier": {
          "type": "string"
        },
        "pointOfContact": {
          "type": "array",
          "items": {
            "$ref": "../../general.schema.json#/definitions/PointOfContact"
          },
          "minItems": 1
        },
        "publication": {
          "type": "object",
          "additionalProperties": false,
          "properties": {
            "isbn": {
              "type": "string"
            },
            "pages": {
              "type": "string"
            },
            "author": {
              "type": "string"
            },
            "volume": {
              "type": "string"
            },
            "location": {
              "type": "string"
            },
            "publisher": {
              "type": "string"
            },
            "explanation": {
              "type": "string"
            },
            "publishedIn": {
              "type": "string"
            },
            "baseDataText": {
              "type": "string"
            },
            "documentType": {
              "anyOf": [
                { "$ref": "refs/general.schema.json#/definitions/KeyValue" },
                { "type": "null" }
              ]
            },
            "publicationDate": {
              "type": "string"
            },
            "publishingHouse": {
              "type": "string"
            },
            "bibliographicData": {
              "type": "string"
            },
            "placeOfPublication": {
              "type": "string"
            }
          }
        },
        "advProductGroups": {
          "$ref": "refs/general.schema.json#/definitions/advProductGroups"
        },
        "themes": {
          "$ref": "refs/general.schema.json#/definitions/themes"
        },
        "spatial": {
          "$ref": "refs/general.schema.json#/definitions/Spatial"
        },
        "temporal": {
          "$ref": "refs/general.schema.json#/definitions/temporal"
        },
        "dataset": {
          "$ref": "refs/general.schema.json#/definitions/dataset"
        },
        "extraInfo": {
          "$ref": "refs/general.schema.json#/definitions/extraInfo"
        },
        "metadata": {
          "$ref": "refs/general.schema.json#/definitions/metadata"
        },
        "extraInfoPublishArea": {
          "$ref": "../../general.schema.json#/definitions/KeyValue"
        },
        "resource": {
          "$ref": "refs/general.schema.json#/definitions/resource"
        },
        "keywords": {
          "$ref": "refs/general.schema.json#/definitions/keywords"
        },
        "maintenanceInformation": {
          "$ref": "refs/general.schema.json#/definitions/maintenanceInformation"
        },
        "references": {
          "$ref": "refs/general.schema.json#/definitions/references"
        },
        "graphicOverviews": {
          "$ref": "refs/general.schema.json#/definitions/graphicOverviews"
        },
        "digitalTransferOptions": {
          "$ref": "refs/general.schema.json#/definitions/digitalTransferOptions"
        },
        "categoryCatalog": {
          "$ref": "refs/general.schema.json#/definitions/categoryCatalog"
        },
        "databaseContent": {
          "$ref": "refs/general.schema.json#/definitions/databaseContent"
        },
        "explanation": {
          "$ref": "refs/general.schema.json#/definitions/explanation"
        },
        "methodText": {
          "$ref": "refs/general.schema.json#/definitions/methodText"
        },
        "orderInfo": {
          "$ref": "refs/general.schema.json#/definitions/orderInfo"
        },
        "distribution": {
          "$ref": "refs/general.schema.json#/definitions/distribution"
        }
      },
      "required": [
        "_uuid",
        "_type",
        "title",
        "description",
        "pointOfContact",
        "spatial",
        "temporal",
        "metadata",
        "dataset",
        "extraInfoPublishArea"
      ],
      "title": "Literature"
    }
  }
}
