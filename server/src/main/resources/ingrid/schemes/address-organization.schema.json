{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$ref": "#/definitions/InGridOrganization",
  "definitions": {
    "InGridOrganization": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "_uuid": {
          "type": "string",
          "format": "uuid"
        },
        "_type": {
          "type": "string"
        },
        "title": {
          "type": "string",
          "minLength": 1
        },
        "address": {
          "$ref": "../../general.schema.json#/definitions/AddressClass"
        },
        "contact": {
          "type": "array",
          "items": {
            "$ref": "../../general.schema.json#/definitions/Contact"
          },
          "minItems": 1
        },
        "organization": {
          "type": "string"
        },
        "publishArea": {
          "$ref": "../../general.schema.json#/definitions/KeyValue"
        },
        "positionName": {
          "type": "string"
        },
        "hoursOfService": {
          "type": "string"
        }
      },
      "required": ["_uuid", "_type", "organization", "contact"],
      "title": "Address"
    }
  }
}
